<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.smaato.soma.cmpconsenttooldemoapp.MainActivity">

    <Button
        android:id="@+id/gdpr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_gdpr"
        android:layout_margin="5dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/loadAppnexusAd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadAppNexus_banner"
        android:layout_margin="5dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/loadPrebid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadPrebid_banner"
        android:layout_margin="5dp"
        android:textAllCaps="false" />

    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:padding="5dp">
    </FrameLayout>

    <TextView
        android:id="@+id/consentStringTV"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </TextView>


</LinearLayout>
